{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Go unit tests",
            "options": {
                "cwd": "${workspaceFolder}/go"
            },
            "command": "go",
            "args": [
                "test",
                "./structures_test",
                "./questions_test",
                "-count=1"
            ],
            "group": "test"
        },
        {
            "label": "Jest unit tests",
            "options": {
                "cwd": "${workspaceFolder}/typescript"
            },
            "command": "jest",
            "args": [
                "--coverage"
            ],
            "problemMatcher": []
        },
        {
            "label": "Ruby unit tests",
            "options": {
                "cwd": "${workspaceFolder}/ruby "
            },
            "command": "rspec",
            "args": [
                "--pattern",
                "src/spec/*_spec.rb"
            ],
            "problemMatcher": []
        },
        {
            "label": "Install TypeScript dependencies",
            "options": {
                "cwd": "${workspaceFolder}/typescript"
            },
            "command": "yarn",
            "problemMatcher": []
        },
        {
            "label": "Install Ruby dependencies",
            "options": {
                "cwd": "${workspaceFolder}/ruby"
            },
            "command": "bundle",
            "args": ["install"],
            "problemMatcher": []
        },
        {
            "label": "TSLint",
            "options": {
                "cwd": "${workspaceFolder}/typescript/src"
            },
            "command": "tslint",
            "args": [
                "--config",
                "../tslint.json",
                "--project",
                "../tsconfig.json",
                "**/*.ts"
            ],
            "problemMatcher": []
        }
    ]
} 